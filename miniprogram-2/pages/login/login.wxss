/* pages/login/login.wxss */
.login_head{
  margin: 50% auto;
  height: 470rpx;
  width: 600rpx;
  border: solid 1rpx #ccc;
}
.login_text{
  margin-top: 10px;
  font-size: 18px;
}
.login_navigator{
  color: #CCC;
  font-size: 24rpx;
  float: right;
  margin-top: 5px;
}
.login_te{
  margin-left: 15px;
  color: #7E8EF0; 
  font-size: 40rpx;
}
.name_img, .pwd_img {
  margin-right: 10rpx;
  width: 45rpx;
  height: 45rpx;
  margin-left: 20rpx;
}
.name_img{
  margin-top: 35rpx;
}
.pwd_img{
  margin-top: 70rpx;
}
.login_my{
  width: 85%;
  height: 80rpx;
  border:1px solid #ccc;
  border-radius: 50rpx;
  float: right;
  margin-top: 20rpx;
}
.login_pwd{
  margin-top: -70rpx;
}
.login_one, .login_two{
  box-sizing: border-box;
  width: 100%;
  height: 90%;

}
.login_login{
  width: 450rpx;
  height: 90rpx;
  margin-left: 100rpx;
}
.login_lo{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;/*字体在框中的高度*/
  margin-top: 25px;
  color: #fff;
  background-color:#7e8ef0;
  border: solid 0.1rpx #ccc;
  border-radius: 40rpx;/*弧度*/
  float: left;
}
.login_log{
  float: right;
}
.login_one, .login_two{
  margin-top: 5px;
  padding-left: 10rpx;
  font-size: 35rpx;
}