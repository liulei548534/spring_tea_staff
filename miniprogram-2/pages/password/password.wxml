<!--pages/password/password.wxml-->
<view class="register_head">
  <view class="r_i">
    <view>
      <input class="r_input" name="username" bindinput="pwdinput" value='{{pwd}}' placeholder="请输入手机号" />
      <text decode="{{true}}">电 &nbsp;话 ：</text>
    </view>
    <view>
      <input class="r_input,r_inpy" name="username" bindinput="pwdinput" value='{{pwd}}' placeholder="请输入验证码" />
      <text>验证码：</text>
    </view>
    <view>
      <input class="r_input" name="password" type="password" bindinput="pwdinput" value='{{pwd}}' placeholder="请输入密码" />
      <text decode="{{true}}">密 &nbsp;码 ：</text>
    </view>
    <view>
      <input class="r_input" name="password" type="password" bindinput="pwdinput" value='{{pwd}}' placeholder="请再次输入密码" />
      <text decode="{{true}}">新密码：</text>
    </view>
    <view>
      <navigator url="../login/login" open-type="redirect" hover-class="none">{{login}}
        <button class="register_bu" size="{{primarySize}}" form-type='submit' disabled='{{disabled}}'>
          提交{{flag}}
        </button>
      </navigator>
    </view>
  </view>
</view>