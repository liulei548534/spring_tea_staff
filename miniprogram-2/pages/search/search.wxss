  border-radius: 10rpx;
  background-color: white;
}
.search_head .right {
  border: 1px solid #f5f5f5;
  border-radius: 10rpx;
  text-align: center;
  width: 100%;
  margin: 0 10rpx 0 40rpx;
  line-height: 80rpx;
  flex: 1;
  background-color: #fff;
}

